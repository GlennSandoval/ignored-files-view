{
  "name": "show-ignored-files",
  "displayName": "Show Ignored Files",
  "description": "A VS Code extension that shows all files ignored by Git in a dedicated tree view.",
  "version": "0.0.1",
  "publisher": "your-name",
  "license": "MIT",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ignoredFilesView",
    "onCommand:show-ignored.refresh",
    "onCommand:show-ignored.open",
    "onCommand:show-ignored.reveal",
    "onCommand:show-ignored.copyPath",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ignoredFilesView",
          "name": "Ignored Files",
          "contextualTitle": "Ignored Files"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "show-ignored.refresh",
          "when": "view == ignoredFilesView",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ],
      "view/item/context": [
        {
          "command": "show-ignored.open",
          "when": "view == ignoredFilesView && viewItem == file",
          "group": "inline@1"
        },
        {
          "command": "show-ignored.reveal",
          "when": "view == ignoredFilesView && viewItem == file",
          "group": "inline@2"
        },
        {
          "command": "show-ignored.copyPath",
          "when": "view == ignoredFilesView && viewItem == file",
          "group": "inline@3"
        }
      ]
    },
    "commands": [
      {
        "command": "show-ignored.refresh",
        "title": "Ignored Files: Refresh"
      },
      {
        "command": "show-ignored.open",
        "title": "Ignored Files: Open"
      },
      {
        "command": "show-ignored.reveal",
        "title": "Ignored Files: Reveal in Explorer"
      },
      {
        "command": "show-ignored.copyPath",
        "title": "Ignored Files: Copy Path"
      },
      {
        "command": "show-ignored.delete",
        "title": "Ignored Files: Delete (stub)"
      },
      {
        "command": "show-ignored.unignore",
        "title": "Ignored Files: Unignore (stub)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "build": "npm run compile",
    "lint": "echo 'add eslint later'",
    "format": "echo 'add prettier later'",
    "package": "vsce package || echo 'Install vsce to package'",
    "test:unit": "node tests/run-tests.js",
    "test:smoke": "node tests/smoke/smoke-tests.js",
    "test": "npm run build && npm run test:unit && npm run test:smoke",
    "milestones": "node scripts/calc-milestones.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.84.0",
    "typescript": "^5.5.0"
  }
}
